{
    "extends": "tslint:recommended",
    "rules": {
        "max-classes-per-file": false,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "indent": [
            true,
            "tabs"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "member-access": false,
        "interface-name": false,
        "arrow-parens": false,
        "trailing-comma": [
            true,
            "multiline"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "defaultSeverity": "warn"
}